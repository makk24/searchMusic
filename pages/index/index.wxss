/**index.wxss**/

page {
  background: #fff;
}

.list {
  margin-top: 30rpx;
}
.list .top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 80rpx;
  margin-right: 30rpx;
}
.list .top .right{
  width: 220rpx;
  height: 60rpx;
  border-radius: 40rpx;
  background: #f3f3f3;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
}
.list .title{
  margin-left: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 80rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 40rpx;
  padding: 30rpx 0;
}

.item .left {
  display: flex;
  align-items: center;
}
.item .left text{
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}
.item .left .song{
  width: 420rpx;
}
.item .right{
  display: flex;
  align-items: center;
}
.item .right .comment{
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #999;
}
.item .rank {
  margin-right: 30rpx;
  font-size: 28rpx;
}

.item image {
  width: 30rpx;
  height: 30rpx;
}

.content {
  margin-top: 30rpx;
}

.search {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  flex-direction: column;
  text-align: center;
  border-radius: 10rpx;
  position: relative;
}

.search-icon {
  width: 42rpx;
  height: 42rpx;
  z-index: 10;
  position: absolute;
  left: 56rpx;
}

.flex-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input {
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  border: 1px solid #ccc;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding-left: 60rpx;
}



@-webkit-keyframes rotation{
from {-webkit-transform: rotate(0deg);}
to {-webkit-transform: rotate(360deg);}
}

.Rotation{
-webkit-transform: rotate(360deg);
        animation: rotation 5s linear infinite;
   -moz-animation: rotation 5s linear infinite;
-webkit-animation: rotation 5s linear infinite;
     -o-animation: rotation 5s linear infinite;
}

.play-bar{
    position: fixed;
    bottom:0rpx;
    width:100%;
    height:100rpx;
    background: -webkit-linear-gradient(top, #f9f9f9, #f3f3f3); 
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.play-bar-image-container{
    width:75rpx;
    height:75rpx;
    padding-left:30rpx;
}

.play-bar-image{
    width:75rpx;
    height:75rpx;
    border-radius: 50%;
}

.play-bar-text{
    flex-grow: 1;
    padding-left:20rpx;
}

.play-bar-button{
    width:40rpx;
    height:40rpx;
    padding-right:60rpx;
}
.hide{
  display: none;
}